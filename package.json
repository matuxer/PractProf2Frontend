{
  "name": "frontend-base-tailwind",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "tailwind:watch": "npx tailwindcss -i src/styles/tailwind.css -o public/css/styles.css --watch",
    "watch:copy-pages": "npx cpx \"src/pages/**/*\" public/ -w",
    "watch:copy-components": "npx cpx \"src/components/**/*\" public/components -w",
    "watch:copy-js": "npx cpx \"src/js/**/*\" public/js -w",
    "watch:copy-static": "npx cpx \"src/static/**/*\" public/static -w",
    "watch:copy-css": "npx cpx \"src/styles/custom.css\" public/css -w",
    "watch:copy-swiper": "npx cpx \"node_modules/swiper/swiper-bundle.*\" public/css -w && npx cpx \"node_modules/swiper/swiper-bundle.js\" public/js -w",
    "serve": "npx http-server public -p 8080 -c-1",
    "dev": "concurrently -k -n TAILWIND,SERVER -c \"cyan,yellow\" \"npm:tailwind:watch\" \"npm:serve\"",
    "build:css": "npx tailwindcss -i src/styles/tailwind.css -o public/css/styles.css --minify",
    "build:copy": "npx cpx \"src/pages/**/*\" public/ && npx cpx \"src/components/**/*\" public/components && npx cpx \"src/js/**/*\" public/js && npx cpx \"src/static/**/*\" public/static && npx cpx \"src/styles/custom.css\" public/css",
    "build": "npm run build:css && npm run build:copy"
  },
  "dependencies": {
    "swiper": "^11.2.6"
  },
  "devDependencies": {
    "concurrently": "^8.0.0",
    "cpx": "^1.5.0",
    "http-server": "^14.1.1",
    "tailwindcss": "^3.4.0"
  }
}
